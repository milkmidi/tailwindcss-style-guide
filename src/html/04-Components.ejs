<!DOCTYPE html>
<html lang="en">
  <%- include('./components/header.ejs') -%>

  <body>
    <a href="index.html" class="my-btn">Back</a>
    <div class="container mx-auto">
      <section data-name="button with brand color">
        <my-preview>
          <div data-preview>
            <button class="pg-btn--red pg-btn">RED</button>
            <button class="pg-btn--red pg-btn--lg pg-btn">RED</button>
          </div>
        </my-preview>
        <div class="-mx-2 flex flex-wrap child:px-2">
          <%
          <!-- prettier-ignore -->
          const SIZE = ['--sm', '', '--lg', '--xl', '--2xl'];
          for(let i =0; i < SIZE.length ; i++ ){
            const s = SIZE[i];
          %>
          <div class="mb-3 w-1/3">
            <my-code class="bg-white">
              <button
                data-class="pg-btn pg-btn<%=s%> pg-btn--red"
                class="pg-btn<%=s%> pg-btn--red pg-btn">
                BUTTON
              </button>
            </my-code>
          </div>
          <% } %>
        </div>

        <hr />
        <div class="-mx-2 flex flex-wrap child:px-2">
          <%
          <!-- prettier-ignore -->
          for(let i =0; i < SIZE.length ; i++ ){
            const s = SIZE[i];
          %>
          <div class="mb-3 w-1/3">
            <my-code class="bg-white">
              <button
                data-class="pg-btn pg-btn<%=s%> pg-btn--black"
                class="pg-btn<%=s%> pg-btn--black pg-btn">
                BUTTON
              </button>
            </my-code>
          </div>
          <% } %>
        </div>

        <div class="-mx-2 flex flex-wrap child:px-2">
          <%
          <!-- prettier-ignore -->
          for(let i =0; i < SIZE.length ; i++ ){
            const s = SIZE[i];
          %>
          <div class="mb-3 w-1/3">
            <my-code class="bg-white">
              <button
                disabled
                data-class="pg-btn pg-btn<%=s%> pg-btn--black"
                class="pg-btn<%=s%> pg-btn--black pg-btn">
                BUTTON
              </button>
            </my-code>
          </div>
          <% } %>
        </div>
      </section>

      <section data-name="form">
        <div>
          <label>
            <input type="checkbox" class="pg-checkbox--red pg-mark--black pg-checkbox" />
            <span>checkbox</span>
          </label>
        </div>
        <div>
          <label>
            <input type="checkbox" class="pg-checkbox--black pg-checkbox" />
            <span>checkbox</span>
          </label>
        </div>
        <div>
          <label>
            <input type="checkbox" class="pg-checkbox--black pg-checkbox" disabled />
            <span>checkbox</span>
          </label>
        </div>
        <div>
          <label>
            <input
              type="checkbox"
              class="pg-checkbox--black pg-checkbox"
              disabled
              checked />
            <span>checkbox</span>
          </label>
        </div>
        <div>
          <label>
            <input type="radio" class="pg-radio pg-radio-red bg-pg-red" name="radio1" />
            <span>radio</span>
          </label>
        </div>
        <div>
          <label>
            <input type="radio" class="pg-radio pg-radio-red bg-pg-red" name="radio1" />
            <span>radio</span>
          </label>
        </div>
      </section>
    </div>
  </body>
</html>
